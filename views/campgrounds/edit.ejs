<% include ../partials/header %>

	<div class="row justify-content-center" style= "margin: 0 auto; padding-top: 5rem;">
		<h1>
			Edit <%= campground.name %>
		</h1>
	</div>
</div>
	
		<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
		  <div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 10px;">
			  <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
			</div>
	<div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 10px;">
			<input type="number" class="form-control" name="campground[price]" value="<% campground.price %>" placeholder="Price" min="0.01" step="0.01">
		  </div>
		  <div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 10px;">
			<input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
		  </div>
		  <div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 30px;">
			<input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
		  </div>
		  <button type="submit" class="btn btn-lg btn-primary btn-block" style = "width: 30%; margin: 0 auto; padding-top: 	10px;">Submit</button>
		</form>


<div class="container" >
	<div class="row justify-content-center" style= "margin: 0 auto; padding-top: 5rem;">
			<a href="/campgrounds">Go Back</a>
	</div>




<% include ../partials/footer %>