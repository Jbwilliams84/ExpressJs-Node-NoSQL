<% include ../partials/header %>


	<div class="row justify-content-center" style= "margin: 0 auto; padding-top: 5rem;">
		<h1>
			Create A New Campground
		</h1>
	</div>
</div>
	
		<form action="/campgrounds" method="POST">
		  <div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 10px;">
			<input type="text" class="form-control" name="name" placeholder="Name">
		  </div>
		<div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 10px;">
			<input type="number" class="form-control" name="price" placeholder="Price" min="0.01" step="0.01">
		  </div>
		  <div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 10px;">
			<input type="text" class="form-control" name="image" placeholder="Image URL">
		  </div>
		  <div class="form-group" style="width: 30%; margin: 0 auto; padding-bottom: 30px;">
			<input type="text" class="form-control" name="description" placeholder="Description">
		  </div>
		  <button type="submit" class="btn btn-lg btn-primary btn-block" style = "width: 30%; margin: 0 auto; padding-top: 	10px;">Submit</button>
		</form>


<div class="container" >
	<div class="row justify-content-center" style= "margin: 0 auto; padding-top: 5rem;">
